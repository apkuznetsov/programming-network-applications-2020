@model HotelWebApp.Helpers.PagedData<HotelWebApp.Models.Room>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Список номеров</h1>

    <div id="rooms-list">
        @Html.Partial("RoomsList")
    </div>

    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

    @using (Ajax.BeginForm("RoomsList", new AjaxOptions
    {
        UpdateTargetId = "rooms-list",
    }))
    {
        <tfoot>
        <tr>
            <td colspan="7">
                @for (int pageNum = 1; pageNum <= Model.TotalPages; pageNum++)
                {
                    <input type="submit"
                           class="btn btn-default"
                           name="pageNum"
                           value="@pageNum"/>
                }
            </td>
        </tr>
        </tfoot>
    }
</div>
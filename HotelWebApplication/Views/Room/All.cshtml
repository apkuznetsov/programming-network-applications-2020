        @using (Ajax.BeginForm("Search", "Room", new AjaxOptions { UpdateTargetId = "results" }))
        {
            <input type="text" name="search" />
            <input type="submit" value="Поиск" />
        }

        <h1>Список номеров</h1>
        <div id="results"></div>

    </div>

    @Scripts.Render("~/scripts/jquery-3.3.1.min.js")

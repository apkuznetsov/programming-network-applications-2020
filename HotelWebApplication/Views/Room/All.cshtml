@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        @using (Ajax.BeginForm("Search", "Room",
            new AjaxOptions
            {
                UpdateTargetId = "results",
                LoadingElementId = "loading"
            },
            new { @class = "navbar-form navbar-left" }))
        {
            <form class="navbar-nav pull-right">
                <input type="text" name="search" placeholder="Поиск..." class="search-field" />
            </form>
        }

        <h1>Список номеров</h1>
        <div id="loading">
            <p>Идёт загрузка...</p>
        </div>
        <div id="results"></div>

    </div>

    @Scripts.Render("~/scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
</div>